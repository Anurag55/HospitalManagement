<%= stylesheet_link_tag 'form' %>
</br>
<div id="form" class="jumbotron">
  <p id="heading"> Enter your mail id</p>

  <% form_tag({:action => "reset_password_confirmation"}, :class => "form" )  do  -%>
    <div class="form-group">
      <%= label_tag( :email,"Email") %><br />
      <%= text_field_tag(:email, params[:email], :class => 'form-control') %>
    </div>
    <%= submit_tag "Send Reset password link", :class => 'btn btn-large btn-primary' %>
  <% end %>
</div>
