<% form_for(@timeslot, :html => {:class => "form"}) do |f| %>

  <div class="form-group">
    <label>Select Doctor</label>
    <%= select :timeslot, :doctor_id, options_for_select(@available_doctors.map {|p| [p.first_name,p.id]}) %>
    <%#= text_field :timeslot, :docter_id  %>
  </div>

  <br/> <br/>

  <div class="form-group">
    <label> Select start time </label>
    <%= datetime_select(:timeslot, :start_time) %>  </br>
  </div>
  <div class="form-group">
    <label> Select end time </label>
    <%= datetime_select(:timeslot, :end_time) %>  </br>
  </div>
  <div class="form-group">
    <%= f.label (:slot_width, "Enter the slot interval in minutes", :class => 'label') %>
    <%= f.text_field (:slot_width, :class => 'input') %><br /><br />
  </div>
  <%= f.submit 'generate', :class => 'btn btn-large btn-primary' %>

<% end %>
