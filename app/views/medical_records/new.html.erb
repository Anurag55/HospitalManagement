<%= stylesheet_link_tag 'form' %>
</br>
<div id="form" class="jumbotron">
  <p id="heading"> Register Here</p>
<% form_for(@medical_record,:html => {:class => "form"}) do |f| %>
    <%= f.error_messages %>
  <%= f.hidden_field :appointment_id, :value => @appointment.id  %>
  <div class="form-group">
    <%= f.label (:comments, "Comments", :class => 'label') %>
    <%= f.text_field (:comments, :class => 'form-control') %>
  </div>

  <div class="form-group">
    <%= f.label (:patient_condition, "Patient condition", :class => 'label') %>
    <%= f.text_field (:patient_condition, :class => 'form-control') %>
  </div>

  <div class="form-group">
    <%= f.label (:medication, "Medication", :class => 'label') %>
    <%= f.text_field (:medication, :class => 'form-control') %>
  </div>

  <div class="form-group">
    <%= f.label (:is_recommended, "Recommend", :class => 'label') %>
    <%= f.check_box (:is_recommended) %>
  </div>


  <%= f.submit 'Create', :class => 'btn btn-large btn-primary' %>

<% end %>

</br></br></br>

<div class="footer">
<%= link_to "Go back", show_appointments_doctors_path %>|<%= link_to "Go-to Home", doctors_path %>
</div>
</div>
